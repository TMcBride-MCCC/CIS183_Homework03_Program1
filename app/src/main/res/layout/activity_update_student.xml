<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_v_updatestudent_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/et_v_updatestudent_fname"
        app:layout_constraintStart_toStartOf="@+id/et_v_updatestudent_fname" />

    <TextView
        android:id="@+id/tv_v_updatestudent_usernameExists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/tv_v_updatestudent_username"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <EditText
        android:id="@+id/et_v_updatestudent_gpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/et_v_updatestudent_age"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updatestudent_age" />

    <Button
        android:id="@+id/btn_v_updatestudent_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="46dp"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bnv_v_updatestudent_bottomNav"
        app:layout_constraintStart_toStartOf="@+id/sp_v_updatestudent_major" />

    <EditText
        android:id="@+id/et_v_updatestudent_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/et_v_updatestudent_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/et_v_updatestudent_email"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updatestudent_email" />

    <EditText
        android:id="@+id/et_v_updatestudent_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/et_v_updatestudent_lname"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updatestudent_lname" />

    <EditText
        android:id="@+id/et_v_updatestudent_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updatestudent_fname" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="15dp"
        android:background="#861CBC"
        android:gravity="center|left"
        android:text="Enrollr"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:text="Student Updatr"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Email:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_updatestudent_email"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_email" />

    <Spinner
        android:id="@+id/sp_v_updatestudent_major"
        android:layout_width="0dp"
        android:layout_height="27dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/et_v_updatestudent_gpa"
        app:layout_constraintStart_toStartOf="@+id/et_v_updatestudent_gpa" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="13dp"
        android:text="Major:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/sp_v_updatestudent_major"
        app:layout_constraintTop_toBottomOf="@+id/et_v_updatestudent_gpa" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:text="GPA:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_updatestudent_gpa"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_gpa" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Age:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_v_updatestudent_age"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_age" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="10dp"
        android:text="First Name:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_fname"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="Username:"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_v_updatestudent_username"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_fname" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp"
        android:text="Last Name:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_v_updatestudent_lname"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_v_updatestudent_bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>